<%= render 'phones/header' %>
<%= render 'phones/form' %>

<div class="col-lg-9">
	<h1> 詳細</h1>
	<table class="table table-striped" border="2">
		<tr>
			<th>キャリア</th>
			<td><%= Career.find_by(id: @total.plan.career_id).name %></td>
		</tr>
		<tr>
			<th>データプラン</th>
			<td><%= @total.plan.name %></td>
		</tr>
		<tr>
			<th>端末</th>
			<td><%= @total.mobile_phone.name %></td>
		</tr>
		<tr>
			<th>割引</th>
			<td>割引の名前</td>
		</tr>
	</table>
	<h1> 内訳</h1>
		<table class="table table-striped" border="2">
		<tr>
			<th>データプラン</th>
			<td><%= @total.plan.name %></td>
			<td><%= @total.plan.cost %> 円/月</td>
		</tr>
		<tr>
			<th>端末代</th>
			<td><%= @total.mobile_phone.name %></td>
			<td><%= @total.mobile_phone.cost %> 円/月(24回)</td>
		</tr>
		<tr>
			<th>割引</th>
			<td>割引の名前</td>
			<td>割引額</td>
		</tr>
		<tr>
			<th>合計</th>
			<td></td>
			<td><%= @total.plan.cost.to_i + @total.mobile_phone.cost.to_i %> 円/月</td>
		</tr>
		<tr>
			<th>1年間の合計</th>
			<td></td>
			<td><%= (@total.plan.cost.to_i + @total.mobile_phone.cost.to_i) * 12 %> 円 </td>
		</tr>
	</table>
	<input class="btn btn-primary" type="button" value="このプランを保存する">
</div>
</div>
</div>